{
  "name": "dynamic-knowledge-base-api",
  "version": "1.0.0",
  "description": "RESTful API for a Dynamic Knowledge Base System with version control and hierarchical topics",
  "main": "main.ts",
  "exports": "./main.ts",
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --allow-write main.ts",
    "start": "deno run --allow-net --allow-read --allow-write main.ts",
    "test": "deno test --allow-net --allow-read --allow-write",
    "test:watch": "deno test --watch --allow-net --allow-read --allow-write",
    "test:coverage": "deno test --coverage=coverage --allow-net --allow-read --allow-write",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check main.ts"
  },
  "imports": {
    "@/": "./",
    "express": "npm:express@^4.18.2",
    "cors": "npm:cors@^2.8.5",
    "helmet": "npm:helmet@^7.1.0",
    "express-rate-limit": "npm:express-rate-limit@^7.1.5",
    "uuid": "npm:uuid@^9.0.1",
    "@types/express": "npm:@types/express@^4.17.21",
    "@types/cors": "npm:@types/cors@^2.8.17",
    "@types/uuid": "npm:@types/uuid@^9.0.7",
    "@std/": "jsr:@std/"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
